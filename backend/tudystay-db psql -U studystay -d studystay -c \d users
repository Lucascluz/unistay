Check constraints:
    "users_current_housing_type_check" CHECK (current_housing_type::text = ANY (ARRAY['student_home'::character varying, 'shared_apartment'::character varying, 'private_apartment'::character varying, 'family'::character varying, 'other'::character varying]::text[]))
    "users_gender_check" CHECK (gender::text = ANY (ARRAY['male'::character varying, 'female'::character varying, 'non_binary'::character varying, 'prefer_not_to_say'::character varying]::text[]))
    "users_profile_completion_percentage_check" CHECK (profile_completion_percentage >= 0 AND profile_completion_percentage <= 100)
    "users_study_level_check" CHECK (study_level::text = ANY (ARRAY['bachelor'::character varying, 'master'::character varying, 'phd'::character varying, 'exchange'::character varying, 'other'::character varying]::text[]))
    "users_trust_score_check" CHECK (trust_score >= 0 AND trust_score <= 100)
